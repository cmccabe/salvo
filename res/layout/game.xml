<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <scorched.android.GameControlView
        android:id="@+id/game_control_view" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
    />
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="50px"
                  android:layout_alignParentBottom="true"
                  android:background="@drawable/transparent_grey"
                  >
        <TextView
            android:text="45Â°"
            android:gravity="center"
            android:textSize="40px"
            android:id="@+id/angle_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
        />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            
            <Button
                android:background="@drawable/left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:id="@+id/weapon_picker_left"
                android:layout_alignParentLeft="true"
            />
            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/weapon_picker_center"
                android:gravity="center"
                android:text="Hi there"
                android:layout_toRightOf="@id/weapon_picker_left"
                android:textSize="25px"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:paddingLeft="5px"
                android:paddingRight="5px"
            />
            <Button
                android:background="@drawable/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:id="@+id/weapon_picker_right"
                android:layout_alignParentRight="true"
            />
        </RelativeLayout>
        <Button
            android:id="@+id/fire_button"
            android:text="FIRE"
            android:gravity="center"
            android:textSize="40px"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/clear"
            android:layout_weight="2"
        />
    </LinearLayout>
</RelativeLayout>

