<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <com.senchas.salvo.GameControlView
        android:id="@+id/game_control_view" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
    />
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="50px"
                  android:layout_alignParentBottom="true"
                  >
        <TextView
            android:id="@+id/angle_text"
            android:text=""
            android:gravity="center"
            android:textSize="40px"
            android:background="@drawable/armory_bg_color"
            android:textColor="@drawable/game_text_grey"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginRight="5px"
        />
        <RelativeLayout
            android:id="@+id/armory_center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/armory_bg_color"
            android:layout_weight="1">
            
            <Button
                android:id="@+id/armory_left_button"
                android:background="@drawable/salvo_left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:layout_alignParentLeft="true"
            />
            <TextView
                android:id="@+id/armory_main_text"
                android:gravity="center"
                android:textSize="22px"
                android:textColor="@drawable/game_text_grey"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:text=""
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/armory_secondary_text"
                android:gravity="center"
                android:text=""
                android:textSize="14px"
                android:textColor="@drawable/game_text_grey"
                android:layout_height="wrap_content"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:layout_below="@id/armory_main_text"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"/>
            
            <Button
                android:id="@+id/armory_right_button"
                android:background="@drawable/salvo_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:layout_alignParentRight="true"
            />
        </RelativeLayout>
        <Button
            android:id="@+id/fire_button"
            android:textColor="@drawable/game_text_grey"
            android:layout_marginLeft="5px"
            android:background="@drawable/armory_bg_color"
            android:text="FIRE"
            android:gravity="center"
            android:textSize="40px"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
        />
        <!-- android:background="@drawable/clear" -->
        
    </LinearLayout>
</RelativeLayout>

